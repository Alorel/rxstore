{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "module": "es2015",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "stripInternal": true,
    "importHelpers": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
